<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_form_inherit_af" model="ir.ui.view">
        <field name="name">view.project.form.inherit.af</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options_active']" position="after">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_project_tree_inherit_af" model="ir.ui.view">
        <field name="name">view.project.tree.inherit.af</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="start_date"/>
                <field name="end_date"/>
            </xpath>
        </field>
    </record>

    <record id="view_project_kanban_inherit_af" model="ir.ui.view">
        <field name="name">view.project.kanban.inherit.af</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.project_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="start_date"/>
                <field name="end_date"/>
            </xpath>
            <xpath expr="//div" position="inside">
                <div class="row">
                    <div class="col-12">
                        <span t-if="record.start_date.value">
                            <strong>
                                <t t-esc="record.start_date.value"/>
                            </strong>
                        </span>
                        <span t-if="record.start_date.value and record.end_date.value">
                            <strong>-</strong>
                        </span>
                        <span t-if="record.end_date.value">
                            <strong>
                                <t t-esc="record.end_date.value"/>
                            </strong>
                        </span>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_project_kanban2_inherit_af" model="ir.ui.view">
        <field name="name">view.project.kanban.inherit.af</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="start_date"/>
                <field name="end_date"/>
            </xpath>
            <xpath expr="//div[hasclass('o_primary')]" position="inside">
                <div class="row">
                    <div class="col-12">
                        <span t-if="record.start_date.value">
                            <strong>
                                <t t-esc="record.start_date.value"/>
                            </strong>
                        </span>
                        <span t-if="record.start_date.value and record.end_date.value">
                            <strong>-</strong>
                        </span>
                        <span t-if="record.end_date.value">
                            <strong>
                                <t t-esc="record.end_date.value"/>
                            </strong>
                        </span>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_project_task_kanban_inherit_af" model="ir.ui.view">
        <field name="name">view.project.task.tree.inherit.af</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='rating_ids']" position="after">
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="task_number"/>
                <field name="parent_task_id"/>
                <field name="required_task"/>
                <field name="optional_task"/>
            </xpath>
            <xpath expr="//field[@name='project_id']" position="after">
                <br/>
                <span t-if="record.start_date.value">
                    <strong>
                        <t t-esc="record.start_date.value"/>
                    </strong>
                </span>
                <span t-if="record.start_date.value and record.end_date.value">
                    <strong>-</strong>
                </span>
                <span t-if="record.end_date.value">
                    <strong>
                        <t t-esc="record.end_date.value"/>
                    </strong>
                </span>
            </xpath>
            <xpath expr="//div[hasclass('o_kanban_record_headings')]/strong" position="replace">
                <t t-if="record.parent_task_id.value">
                    <strong class="o_kanban_record_title" style="color:green">
                        <field name="task_name_number"/>
                    </strong>
                </t>
                <t t-elif="record.optional_task.raw_value">
                    <strong class="o_kanban_record_title" style="color:#8b48e5">
                        <field name="task_name_number"/>
                    </strong>
                </t>
                <t t-elif="record.required_task.raw_value">
                    <strong class="o_kanban_record_title" style="color:red">
                        <field name="task_name_number"/>
                    </strong>
                </t>
                <t t-else="else">
                    <strong class="o_kanban_record_title">
                        <field name="task_name_number"/>
                    </strong>
                </t>
            </xpath>
            <xpath expr="//div[hasclass('oe_kanban_bottom_left')]/field[@name='priority']" position="replace"/>
        </field>
    </record>

     <record id="view_project_task_quick_create_form_inherit_af" model="ir.ui.view">
        <field name="name">view.project.task.create.form.inherit.af</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.quick_create_task_form"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="project_id" invisible="1"/>
                <field name="parent_task_id" domain="[('project_id', '=', project_id)]"/>
            </field>
        </field>
     </record>

    <record id="view_project_task_form_inherit_af" model="ir.ui.view">
        <field name="name">view.project.task.form.inherit.af</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="start_date"/>
                <field name="end_date"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="class">o_task_name text-truncate oe_edit_only</attribute>
            </xpath>
            <field name="priority" position="after">
                <field class="oe_read_only" name="task_name_number"/>
            </field>
            <field name="project_id" position="before">
                <field name="task_number"/>
                <field name="parent_task_id" domain="[('project_id', '=', project_id)]"/>
                <field name="instruction"/>
            </field>
        </field>
    </record>

    <record id="view_project_task_tree_inherit_af" model="ir.ui.view">
        <field name="name">view.project.task.tree.inherit.af</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='project_id']" position="after">
                <field name="start_date"/>
                <field name="end_date"/>
            </xpath>
            <field name="name" position="replace">
                <field name="task_name_number"/>
            </field>
        </field>
    </record>

    <record model="ir.actions.server" id="action_update_task_name">
        <field name="name">Update Task Name</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="state">code</field>
        <field name="code">action = records.update_task_name()</field>
    </record>

    <record id="project.view_task_calendar" model="ir.ui.view">
        <field name="name">project.task.calendar</field>
        <field name="model">project.task</field>
        <field eval="2" name="priority"/>
        <field name="arch" type="xml">
            <calendar date_start="start_date" date_stop="end_date" string="Tasks" mode="month" color="user_id">
                <field name="task_name_number"/>
            </calendar>
        </field>
    </record>

</odoo>